{
    "_metadata": {
      "major_version": 1,
      "minor_version": 1
    },
    "display_information": {
      "name": "Pull Requests"
    },
    "features": {
      "app_home": {
        "home_tab_enabled": true,
        "messages_tab_enabled": false,
        "messages_tab_read_only_enabled": true
      },
      "bot_user": {
        "display_name": "Pull Requests",
        "always_online": false
      },
      "slash_commands": [
        {
          "command": "/submit-pr",
          "description": "Submit a pull request for review",
          "should_escape": false
        }
      ]
    },
    "oauth_config": {
      "scopes": {
        "bot": [
          "channels:history",
          "chat:write",
          "commands",
          "users:read" 
        ]
      }
    },
    "settings": {
      "event_subscriptions": {
        "bot_events": [
          "app_home_opened",
          "message.channels"
        ]
      },
      "interactivity": {
        "is_enabled": true
      },
      "org_deploy_enabled": false,
      "socket_mode_enabled": true,
      "token_rotation_enabled": false
    }
  }
  